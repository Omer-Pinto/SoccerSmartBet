# SoccerSmartBet Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================
# LangSmith Configuration
# ============================================================
# Enable LangSmith tracing for LangGraph flows
LANGSMITH_TRACING=true

# LangSmith API endpoint (default: https://api.smith.langchain.com)
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Your LangSmith API key (get from https://smith.langchain.com/)
LANGSMITH_API_KEY=your_key_here

# Project name in LangSmith dashboard
LANGSMITH_PROJECT=SoccerSmartBet-testing

# ============================================================
# LLM models Configuration
# ============================================================
# OpenAI API Key (for testing with OpenAI)
OPENAI_API_KEY=your_key_here
